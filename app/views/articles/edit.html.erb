<% @article = Article.find_by_id(params[:id])%>

<h1 class="content-head is-center">Update article</h1>
<%= form_for @article, url:{action: "update"}, html: { class: 'pure-form pure-form-aligned' } do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="pure-control-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="pure-control-group">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="pure-control-group">
    <%= f.label :tag_list, 'Tags' %>
    <%= f.text_field :tag_list, placeholder: "Tags separated with comma" %>
  </div>
  <p>
    <%= f.submit 'Update article', class: 'hundra pure-button pure-button-primary'  %>
  </p>

<% end %>
