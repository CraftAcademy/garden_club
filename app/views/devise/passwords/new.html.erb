<div class="user">
  <h1 class="content-head is-center">Forgot your password?</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'pure-form pure-form-aligned' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="pure-control-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder: 'your@email.com' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'hundra pure-button pure-button-primary'  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
