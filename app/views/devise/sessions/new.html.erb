<div class="user">
  <h1 class="content-head is-center">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'pure-form pure-form-aligned' }) do |f| %>
    <div class="pure-control-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder: 'your@email.com'  %>
    </div>

    <div class="pure-control-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="pure-control-group">
        <%= f.label :remember_me %>
        <%= f.check_box :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'hundra pure-button pure-button-primary'  %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
