<div class="user">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'pure-form pure-form-aligned' }) do |f| %>
  <%= devise_error_messages! %>
  <div>
    <% if current_user.pro %>
      <p> You are a pro member</p>
    <% else %>
      <p> Sign up for pro membership!</p>
    <% end %>
  </div>
  <div class="pure-control-group">
    <%= f.label :pro, 'Check the box to become a pro member' %>
    <% if current_user.pro %>
      <%= f.check_box :pro, checked: true  %>
    <% else %>
      <%= f.check_box :pro  %>
    <% end %>
  </div>

  <div class="pure-control-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="pure-control-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="pure-control-group">
    <%= f.label :garden_website, 'Garden Website' %>
    <%= f.text_field :garden_website %>
  </div>

  <div class="pure-control-group">
    <%= f.label :blurb %>
    <%= f.text_area :blurb %>
  </div>

  <div class="pure-control-group">
    Garden Address:<br>
    <%= f.label :g_street, 'Street' %>
    <%= f.text_field :g_street %><br>
    <%= f.label :g_street2, 'Street, Continued' %>
    <%= f.text_field :g_street2 %><br>
    <%= f.label :g_city, 'City' %>
    <%= f.text_field :g_city %><br>
    <%= f.label :g_postcode, 'Post Code' %>
    <%= f.text_field :g_postcode %><br>
    <%= f.label :g_country, 'Country' %>
    <%= f.text_field :g_country %>
  </div>

  <div class="pure-control-group">
    <p><i>(leave below blank if you don't want to change password)</i></p>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: @minimum_password_length.to_s + ' characters minimum' %>   <br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="pure-control-group">
    <p><i>(we need your current password to confirm your changes)</i></p>
    <%= f.label :current_password %>
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'hundra pure-button pure-button-primary' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div>
