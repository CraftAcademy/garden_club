<h1 class="content-head is-center">Register</h1>
<div class="user">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'pure-form pure-form-aligned' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="pure-control-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Your Name' %>
  </div>
  <div class="pure-control-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: 'your@email.com'  %>

  </div>

  <div class="pure-control-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", placeholder: @minimum_password_length.to_s + ' characters minimum' %> <br />
    <%= f.label :password_confirmation, 'Password Confirmation' %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Register", class: 'hundra pure-button pure-button-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
